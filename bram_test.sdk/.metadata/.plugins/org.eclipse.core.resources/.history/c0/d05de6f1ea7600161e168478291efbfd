/*
 * helloworld.c: simple test application
 *
 * This application configures UART 16550 to baud rate 9600.
 * PS7 UART (Zynq) is not initialized by this application, since
 * bootrom/bsp configures it to baud rate 115200
 *
 * ------------------------------------------------
 * | UART TYPE   BAUD RATE                        |
 * ------------------------------------------------
 *   uartns550   9600
 *   uartlite    Configurable only in HW design
 *   ps7_uart    115200 (configured by bootrom/bsp)
 */

#include <stdio.h>
#include "xparameters.h"
#include "xbram.h"
#include "sleep.h"

#include "platform.h"
#include "debug.h"
#include "constants.h"
#include "freq_counter.h"
#include "uart.h"
#include "site.h"
#include "parser.h"



extern Serial uart={};
extern Site site[ACTIVE_SITES]={};


int main()
{
   u8 i;
   float freq;
   char all_args[MAX_CHAR_ARGS]={""};

   u8 data;
   char test='d';

    init_platform();

    printf("1234\n");
   init_counter();


   new_uart(&uart);



    for (i=0; i<ACTIVE_SITES;i++) {
    new_site(&site[i],i);
    }



   while(1)
    {

    	//freq=get_freq(0);
    	//uart.rx(&data);
    //	interpreter(uart,all_args);
    // 	flush(all_args,MAX_CHAR_ARGS-1);
    	printf("alive");
        sleep(4);
    }



    return 0;
}





